<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>org.lazydog.comic.model</package>
    <entity class="User" access="FIELD" metadata-complete="true">
        <table name="user" schema="comic_collection"/>
        <named-query name="User.findAll">
            <query>select u from User u</query>
        </named-query>
        <attributes>
            <basic name="name">
                <column name="name" nullable="false" unique="true"/>
            </basic>
            <one-to-one name="userPreference" mapped-by="createUser" fetch="EAGER"/>
        </attributes>
    </entity>
</entity-mappings>
