<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>org.lazydog.comic.model</package>
    <entity class="Publisher" access="FIELD" metadata-complete="true">
        <table name="publisher" schema="comic_collection"/>
        <attributes>
            <basic name="name">
                <column name="name" nullable="false" unique="true"/>
            </basic>
            <many-to-one name="image">
                <join-column name="image_id"/>
            </many-to-one>
            <one-to-many name="imprints" mapped-by="publisher"/>
        </attributes>
    </entity>
</entity-mappings>
