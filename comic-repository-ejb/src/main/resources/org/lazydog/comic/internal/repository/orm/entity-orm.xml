<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">

    <package>org.lazydog.comic.model</package>
    <mapped-superclass class="Entity" access="FIELD" metadata-complete="true">
        <entity-listeners>
            <entity-listener class="org.lazydog.persistence.history.HistoryTableListener">
                <post-persist method-name="postPersist"/>
                <post-remove method-name="postRemove"/>
                <post-update method-name="postUpdate"/>
                <pre-persist method-name="setupHistoryTable"/>
                <pre-remove method-name="setupHistoryTable"/>
                <pre-update method-name="setupHistoryTable"/>
            </entity-listener>
        </entity-listeners>
        <attributes> 
            <id name="id">
                <column name="id"/>
                <generated-value strategy="IDENTITY"/>
            </id>
            <transient name="entityClass"/>
        </attributes>
    </mapped-superclass>
</entity-mappings>
