<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">

    <package>org.lazydog.comic.model</package>
    <entity class="Image" access="FIELD" metadata-complete="true">
        <table name="image" schema="comic"/>
        <attributes>
            <basic name="fileName">
                <column name="file_name" nullable="false" unique="true"/>
            </basic>
            <basic name="label">
                <column name="label" unique="true"/>
            </basic>
            <many-to-one name="type" fetch="EAGER">
                <join-column name="image_type_id" nullable="false"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
