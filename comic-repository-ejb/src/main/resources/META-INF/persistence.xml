<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
        
    <persistence-unit name="ComicCollectionPU" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/ComicCollectionPool</jta-data-source>
        <mapping-file>org/lazydog/comic/internal/repository/orm/category-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/character-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/comic-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/comicGrade-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/comicType-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/creator-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/distribution-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/entity-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/have-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/image-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/imageType-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/imprint-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/location-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/person-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/profession-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/publisher-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/title-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/titleType-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/trait-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/user-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/userPreference-orm.xml</mapping-file>
        <mapping-file>org/lazydog/comic/internal/repository/orm/want-orm.xml</mapping-file>
        <class>org.lazydog.comic.model.Category</class>
        <class>org.lazydog.comic.model.Character</class>
        <class>org.lazydog.comic.model.Comic</class>
        <class>org.lazydog.comic.model.ComicGrade</class>
        <class>org.lazydog.comic.model.ComicType</class>
        <class>org.lazydog.comic.model.Creator</class>
        <class>org.lazydog.comic.model.Distribution</class>
        <class>org.lazydog.comic.model.Entity</class>
        <class>org.lazydog.comic.model.Have</class>
        <class>org.lazydog.comic.model.Image</class>
        <class>org.lazydog.comic.model.ImageType</class>
        <class>org.lazydog.comic.model.Imprint</class>
        <class>org.lazydog.comic.model.Location</class>
        <class>org.lazydog.comic.model.Person</class>
        <class>org.lazydog.comic.model.Profession</class>
        <class>org.lazydog.comic.model.Publisher</class>
        <class>org.lazydog.comic.model.Title</class>
        <class>org.lazydog.comic.model.TitleType</class>
        <class>org.lazydog.comic.model.Trait</class>
        <class>org.lazydog.comic.model.User</class>
        <class>org.lazydog.comic.model.UserPreference</class>
        <class>org.lazydog.comic.model.Want</class>
        <property name="eclipselink.logging.level" value="OFF"/>
    </persistence-unit>
</persistence>
