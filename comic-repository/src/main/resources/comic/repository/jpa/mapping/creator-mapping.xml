<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>comic.api.model</package>
    <entity class="Creator" access="FIELD" metadata-complete="true">
        <table name="creator" schema="comic_collection"/>
        <named-query name="Creator.findAll">
            <query>select c from Creator c</query>
        </named-query>
        <attributes>
            <many-to-one name="person" fetch="EAGER">
                <join-column name="person_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="profession" fetch="EAGER">
                <join-column name="profession_id" nullable="false"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
