<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>comic.api.model</package>
    <!-- bug in eclipseLink requires fully-qualified class name here. -->
    <entity class="comic.api.model.Character" access="FIELD" metadata-complete="true">
        <table name="character" schema="comic_collection"/>
        <named-query name="Character.findAll">
            <query>select c from Character c</query>
        </named-query>
        <attributes>  
            <basic name="name">
                <column name="name" nullable="false" unique="true"/>
            </basic>
            <many-to-one name="image" fetch="EAGER">
                <join-column name="image_id"/>
            </many-to-one> 
        </attributes>
    </entity>
</entity-mappings>
