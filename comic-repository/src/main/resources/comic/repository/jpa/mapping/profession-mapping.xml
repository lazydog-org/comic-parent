<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>comic.api.model</package>
    <entity class="Profession" access="FIELD" metadata-complete="true">
        <table name="profession" schema="comic_collection"/>
        <named-query name="Profession.findAll">
            <query>select p from Profession p</query>
        </named-query>
        <attributes>
            <basic name="value">
                <column name="value" nullable="false" unique="true"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
