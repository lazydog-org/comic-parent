<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
    <package>org.lazydog.comic.model</package>
    <entity class="UserPreference" access="FIELD" metadata-complete="true">
        <table name="user_preference" schema="comic_collection"/>
        <named-query name="UserPreference.findAll">
            <query>select u from UserPreference u</query>
        </named-query>
        <attributes>
            <basic name="minimumPublishDate">
                <column name="minimum_publish_date"/>
                <temporal>DATE</temporal>
            </basic>
            <many-to-one name="comicGrade" fetch="EAGER">
                <join-column name="comic_grade_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="comicType" fetch="EAGER">
                <join-column name="comic_type_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="distribution" fetch="EAGER">
                <join-column name="distribution_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="imageType" fetch="EAGER">
                <join-column name="image_type_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="publisher" fetch="EAGER">
                <join-column name="publisher_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="titleType" fetch="EAGER">
                <join-column name="title_type_id" nullable="false"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
