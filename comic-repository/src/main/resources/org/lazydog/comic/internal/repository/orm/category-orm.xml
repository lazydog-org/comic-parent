<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm 
                        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">

    <package>org.lazydog.comic.model</package>
    <entity class="Category" access="FIELD" metadata-complete="true">
        <table name="category" schema="comic_collection"/>
        <named-query name="Category.findAll">
            <query>select c from Category c</query>
        </named-query>
        <attributes>
            <basic name="name">
                <column name="name" nullable="false" unique="true"/>
            </basic>       
        </attributes>
    </entity>   
</entity-mappings>
